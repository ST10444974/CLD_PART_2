@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .home-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
        padding: 2rem;
    }

    h1 {
        font-size: 3rem;
        color: #4b0082;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 2rem;
    }

    .btn-container {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .nav-button {
        padding: 1rem 2rem;
        font-size: 1rem;
        background-color: #6a0dad;
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .nav-button:hover {
        background-color: #5300a5;
    }
</style>

<div class="home-container">
    <h1>Welcome to the Venue Booking System</h1>
    <p>Manage venues, events, and bookings with ease.</p>

    <div class="btn-container">
        <a class="nav-button" asp-controller="Venues" asp-action="Index">View Venues</a>
        <a class="nav-button" asp-controller="Events" asp-action="Index">View Events</a>
        <a class="nav-button" asp-controller="Bookings" asp-action="Index">View Bookings</a>
    </div>
</div>