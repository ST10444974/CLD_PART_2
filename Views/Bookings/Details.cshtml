@model Venue_Booking_System.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingEndDate)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingId" class="btn btn-warning btn-sm">Edit</a> |
    <a asp-action="Index" class="btn btn-warning btn-sm">Back</a>
</div>
